{
    "name": "flutter-preview",
    "displayName": "flutter Preview",
    "description": "Preview a live version of your flutter application in an VS Code pane.",
    "version": "0.0.1",
    "publisher": "rexthedev",
    "author": {
        "name": "Rexford Asamoah"
    },
    "license": "MIT",
    "icon": "images/flutter.png",
    "engines": {
        "vscode": "^1.45.0"
    },
    "galleryBanner": {
        "color": "#54C5F8",
        "theme": "dark"
    },
    "bugs": "https://github.com/jadsonbr/flutter-preview/issues",
    "homepage": "https://github.com/jadsonbr/flutter-preview/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/jadsonbr/flutter-preview"
    },
    "keywords": [
        "flutter",
        "flutter Preview",
        "flutter framework",
        "mobile"  
    ],
    "categories": [
        "Extension Packs",
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.flutter-preview-android",
        "onCommand:extension.flutter-preview-ios",
        "onCommand:extension.flutter-preview-windows",
        "onCommand:extension.flutter-preview-undefined"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.flutter-preview-android",
                "title": "Android",
                "category": "flutter Preview"
            },
            {
                "command": "extension.flutter-preview-ios",
                "title": "IOS",
                "category": "flutter Preview"
            },
            {
                "command": "extension.flutter-preview-windows",
                "title": "Windows Phone",
                "category": "flutter Preview"
            },
            {
                "command": "extension.flutter-preview-undefined",
                "title": "Without frame",
                "category": "flutter Preview"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "flutter Preview",
            "properties": {
                "flutter-preview.host": {
                    "type": "string",
                    "default": "localhost:",
                    "description": "The host on which the flutter serves is running."
                },
                "flutter-preview.port": {
                    "type": "number",
                    "default": 0,
                    "description": "The port on which the flutter serves is running."
                },
                "flutter-preview.background-color": {
                    "type": "string",
                    "default": "#FFFFFF",
                    "description": "The background color of the page"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.45.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}